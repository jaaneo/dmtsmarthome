---
const links = [
  { name: 'Inicio', href: '/' },
  { name: 'Automatización Residencial', href: '/automatizacion-residencial' },
  { name: 'Seguridad Inteligente', href: '/seguridad-inteligente' },
  { name: 'Eficiencia Energética', href: '/eficiencia-energetica' },
  { name: 'Integración Total', href: '/integracion-total' },
];
---

<nav class="fixed top-0 left-0 w-full z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur border-b border-gray-200 dark:border-gray-800 shadow-sm">
  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <a href="/" class="text-xl font-bold text-blue-900 dark:text-white tracking-tight">DMT Smart Home</a>
    <div class="hidden md:flex gap-6">
      {links.map(link => (
        <a href={link.href} class="text-gray-700 dark:text-gray-200 hover:text-blue-700 dark:hover:text-blue-400 font-medium transition-colors px-2 py-1 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
          {link.name}
        </a>
      ))}
    </div>
    <!-- Mobile menu button -->
    <button id="nav-toggle" class="md:hidden p-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-700 dark:text-gray-200">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  <!-- Mobile menu -->
  <div id="nav-menu" class="md:hidden hidden bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800">
    <div class="flex flex-col gap-2 px-4 py-4">
      {links.map(link => (
        <a href={link.href} class="text-gray-700 dark:text-gray-200 hover:text-blue-700 dark:hover:text-blue-400 font-medium transition-colors px-2 py-2 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
          {link.name}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('nav-toggle');
    const menu = document.getElementById('nav-menu');
    toggle?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
    // Cierra el menú al hacer click en un enlace
    if (menu) {
      menu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => menu.classList.add('hidden'));
      });
    }
  });
</script>

<style>
  body { padding-top: 64px; }
  @media (max-width: 768px) {
    body { padding-top: 56px; }
  }
</style> 